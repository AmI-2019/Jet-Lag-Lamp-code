<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">
    <TextView
        android:layout_width="300dp"
        android:gravity="center"
        android:layout_height="80dp"
        android:textSize="20dp"
        android:textColor="@color/googleLightGray"
        android:text="Add a new event to your calendar"/>

    <EditText
        android:id="@+id/editText_eventTitle"
        android:gravity="center"
        android:layout_width="250dp"
        android:layout_height="50dp"

        android:hint="Title of the event" />

    <EditText
        android:id="@+id/editText_startTime"
        android:gravity="center"
        android:layout_width="250dp"
        android:layout_height="50dp"

        android:hint="Start time (hh:mm)" />

    <EditText
        android:gravity="center"
        android:id="@+id/editText_endTime"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="End time (hh:mm)" />
    <Space
        android:layout_width="1dp"
        android:layout_height="30dp"/>
    <Button
        android:id="@+id/btn_AddNewEventOnCalendar"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/mybutton"
        android:gravity="center"
        android:text="ADD"
        android:textColor="@color/googleLightGray" />

    <!-- Include other widget or layout tags here. These are considered
            "child views" or "children" of the linear layout -->

</LinearLayout>