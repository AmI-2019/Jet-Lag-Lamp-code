<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_SingIn"
        android:layout_width="184dp"
        android:layout_height="45dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/mybutton"
        android:radius="10dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="SingIn or SingOut"
        android:textColor="@color/googleLightGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_AboutUs"
        android:layout_width="100sp"
        android:layout_height="40dp"
        android:background="@drawable/mybutton"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="AboutUs"
        android:textColor="@color/googleLightGray"
        app:layout_constraintBottom_toTopOf="@+id/btn_Hotels"
        app:layout_constraintEnd_toStartOf="@+id/btn_Website"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_DailyPlan" />

    <Button
        android:id="@+id/btn_Website"
        android:layout_width="100sp"
        android:layout_height="40dp"
        android:background="@drawable/mybutton"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Website"
        android:textColor="@color/googleLightGray"
        app:layout_constraintBottom_toTopOf="@+id/btn_TravelInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_AboutUs"
        app:layout_constraintTop_toBottomOf="@+id/btn_DailyPlan" />

    <Button
        android:id="@+id/btn_DailyPlan"
        android:layout_width="146dp"
        android:layout_height="53dp"
        android:background="@drawable/mybutton"
        android:gravity="center"
        android:lineSpacingExtra="8sp"
        android:text="Daily Plan"
        android:textColor="@color/googleLightGray"
        android:textColorHint="#00CE0808"
        android:textColorLink="#00B31414"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_ViewProfile"
        android:layout_width="100sp"
        android:layout_height="40dp"
        android:background="@drawable/mybutton"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="View profile"
        android:textColor="@color/googleLightGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.376" />

    <Button
        android:id="@+id/btn_Hotels"
        android:layout_width="100sp"
        android:layout_height="40dp"
        android:background="@drawable/mybutton"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Hotels"
        android:textColor="@color/googleLightGray"
        app:layout_constraintBottom_toTopOf="@+id/btn_SingIn"
        app:layout_constraintEnd_toStartOf="@+id/btn_TravelInfo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_AboutUs" />

    <Button
        android:id="@+id/btn_TravelInfo"
        android:layout_width="100sp"
        android:layout_height="40dp"
        android:background="@drawable/mybutton"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Travel Info"
        android:textColor="@color/googleLightGray"
        app:layout_constraintBottom_toTopOf="@+id/btn_SingIn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_Hotels"
        app:layout_constraintTop_toBottomOf="@+id/btn_Website" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="294dp"
        android:layout_height="205dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/logo_foreground"/>

</android.support.constraint.ConstraintLayout>