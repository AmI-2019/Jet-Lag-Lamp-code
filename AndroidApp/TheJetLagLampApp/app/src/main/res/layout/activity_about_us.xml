<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <!-- Include other widget or layout tags here. These are considered
        "child views" or "children" of the linear layout -->

    <TextView
        android:id="@+id/AboutUs_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Our Team:"
        android:textAllCaps="true"
        android:textColor="@color/googleLightGray"
        android:textSize="20dp" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="619dp"
        android:layout_gravity="center"
        android:columnCount="2"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:rowCount="4"
        android:textAlignment="center"
        app:layout_anchorGravity="center">

        <ImageView
            android:id="@+id/AboutUs_Fabio_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_alignStart="@+id/AboutUs_Fabio_text"
            android:cropToPadding="false"
            android:src="@mipmap/fabio"></ImageView>

        <TextView
            android:id="@+id/AboutUs_Fabio_text"
            android:layout_width="158dp"
            android:layout_height="146dp"
            android:layout_row="1"
            android:layout_column="1"

            android:gravity="center"
            android:text="Fabio Baldo\n age 21\n Electronic engineering \n student"
            android:textColor="@color/googleLightGray"></TextView>


        <TextView
            android:id="@+id/AboutUs_Vincent_text"
            android:layout_width="165dp"
            android:layout_height="147dp"
            android:layout_row="0"
            android:layout_column="1"

            android:gravity="center"
            android:text="Vincent Guatier\n age 22\n Electronic and comunication\n engineering student"
            android:textColor="@color/googleLightGray"></TextView>

        <ImageView
            android:id="@+id/AboutUs_Vincent_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="0"
            android:layout_column="0"
            android:cropToPadding="false"
            android:src="@mipmap/vincent"></ImageView>

        <TextView
            android:id="@+id/AboutUs_Marion_text"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_row="3"
            android:layout_column="1"

            android:gravity="center"
            android:text="Marion Durafour\n age 21\n Electric engineering\n student"
            android:textColor="@color/googleLightGray"></TextView>

        <ImageView
            android:id="@+id/AboutUs_Alessandro_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="2"
            android:layout_column="0"
            android:cropToPadding="false"
            android:src="@mipmap/alessandro"></ImageView>

        <ImageView
            android:id="@+id/AboutUs_Marion_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="3"
            android:layout_column="0"
            android:cropToPadding="false"
            android:src="@mipmap/marion"></ImageView>


        <TextView
            android:id="@+id/AboutUs_Alessandro_text"
            android:layout_width="153dp"
            android:layout_height="149dp"
            android:layout_row="2"
            android:layout_column="1"

            android:gravity="center"
            android:text="Alessandro Bugliarelli\n age 21\n Electronic and comunication\n engineering student"
            android:textColor="@color/googleLightGray"></TextView>
    </GridLayout>


</LinearLayout>
